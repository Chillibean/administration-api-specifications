        "requestBody": {
          "description": "Chapter definitions positions object",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "Chapter definitions positions object",
                "properties": {
                  "chapter_definitions": {
                    "type": "array",
                    "description": "Chapter definitions positions",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number",
                          "description": "The id of chapter definition",
                          "example": 1
                        },
                        "position": {
