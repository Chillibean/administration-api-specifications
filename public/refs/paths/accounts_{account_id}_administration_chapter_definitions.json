{
  "get": {
    "summary": "Get all chapter definitions for account",
    "description": "Get all chapter definitions for account",
    "operationId": "getChapterDefinitions",
    "tags": [
      "Chapter Definitions"
    ],
    "security": [
      {
        "userSessionKey": [],
        "chillipharmSession": []
      }
    ],
    "parameters": [
      {
        "name": "account_id",
        "in": "path",
        "description": "The account id",
        "required": true,
        "schema": {
          "type": "string",
          "example": "1"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/ChapterDefinitionsWithPositions.json"
            }
          }
        }
      },
      "400": {
        "$ref": "../components/responses/BadRequest.json"
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "403": {
        "$ref": "../components/responses/Forbidden.json"
      },
      "404": {
        "$ref": "../components/responses/NotFound.json"
      },
      "500": {
        "$ref": "../components/responses/InternalServerError.json"
      }
    }
  },
  "post": {
    "summary": "Create a chapter definition for account",
    "description": "Create a chapter definition for account",
    "operationId": "createChapterDefinition",
    "tags": [
      "Chapter Definitions"
    ],
    "security": [
      {
        "userSessionKey": [],
        "chillipharmSession": []
      }
    ],
    "parameters": [
      {
        "name": "account_id",
        "in": "path",
        "description": "The account id",
        "required": true,
        "schema": {
          "type": "string",
          "example": "1"
        }
      }
    ],
    "requestBody": {
      "description": "Chapter definition object",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Chapter definition object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of chapter definition",
                "example": "pre"
              },
              "color": {
                "type": "string",
                "description": "The color of chapter definition",
                "example": "#ccc"
              },
              "authenticity_token": {
                "$ref": "../components/schemas/AuthenticityToken.json"
              }
            },
            "additionalProperties": false,
            "required": [
              "name",
              "color",
              "authenticity_token"
            ]
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "Created",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/ChapterDefinitionWithPosition.json"
            }
          }
        }
      },
      "400": {
        "$ref": "../components/responses/BadRequest.json"
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "403": {
        "$ref": "../components/responses/Forbidden.json"
      },
      "404": {
        "$ref": "../components/responses/NotFound.json"
      },
      "409": {
        "$ref": "../components/responses/Conflict.json"
      },
      "500": {
        "$ref": "../components/responses/InternalServerError.json"
      }
    }
  }
}
