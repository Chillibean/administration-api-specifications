{
  "post": {
    "summary": "Update chapter definitions positions for account",
    "description": "Update chapter definitions positions for account",
    "operationId": "updateChapterDefinitionsPositions",
    "tags": [
      "Chapter Definitions"
    ],
    "security": [
      {
        "userSessionKey": [],
        "chillipharmSession": []
      }
    ],
    "parameters": [
      {
        "name": "account_id",
        "in": "path",
        "description": "The account id",
        "required": true,
        "schema": {
          "type": "string",
          "example": "1"
        }
      }
    ],
    "requestBody": {
      "description": "Chapter definitions positions object",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Chapter definitions positions object",
            "properties": {
              "chapter_definitions": {
                "type": "array",
                "description": "Chapter definitions positions",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number",
                      "description": "The id of chapter definition",
                      "example": 1
                    },
                    "position": {
                      "type": "number",
                      "description": "The position of chapter definition",
                      "example": 1
                    }
                  },
                  "required": [
                    "id",
                    "position"
                  ]
                }
              },
              "authenticity_token": {
                "$ref": "../components/schemas/AuthenticityToken.json"
              }
            },
            "additionalProperties": false,
            "required": [
              "chapter_definitions",
              "authenticity_token"
            ]
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/ChapterDefinitionsWithPositions.json"
            }
          }
        }
      },
      "400": {
        "$ref": "../components/responses/BadRequest.json"
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "403": {
        "$ref": "../components/responses/Forbidden.json"
      },
      "404": {
        "$ref": "../components/responses/NotFound.json"
      },
      "500": {
        "$ref": "../components/responses/InternalServerError.json"
      }
    }
  }
}
